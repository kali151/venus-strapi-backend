{
  "kind": "singleType",
  "collectionName": "welcome_pages",
  "info": {
    "singularName": "welcome-page",
    "pluralName": "welcome-pages",
    "displayName": "Welcome Page",
    "description": "Dynamic content for the homepage hero section"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "default": "Witamy w Hotel Venus"
    },
    "subtitle": {
      "type": "text",
      "required": true,
      "maxLength": 500,
      "default": "Luksusowy hotel i spa w sercu natury"
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "ctaButtonText": {
      "type": "string",
      "required": true,
      "maxLength": 50,
      "default": "Odkryj nasze pokoje"
    },
    "ctaButtonLink": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "default": "/rooms"
    },
    "language": {
      "type": "enumeration",
      "enum": ["pl", "en", "de"],
      "default": "pl",
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
